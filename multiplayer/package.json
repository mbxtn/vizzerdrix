{
  "type": "module",
  "scripts": {
    "build-css": "tailwindcss -i ./src/input.css -o ./public/tailwind.css",
    "watch-css": "tailwindcss -i ./src/input.css -o ./public/tailwind.css --watch",
    "dev": "vite",
    "build": "vite build",
    "copy-assets": "cp -r public/icons dist/ && cp public/*.png dist/ && cp public/*.css dist/ 2>/dev/null || true",
    "preview": "vite preview",
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "build:full": "npm run build-css && npm run build && npm run copy-assets",
    "deploy": "npm run build:full && npm run start:prod"
  },
  "dependencies": {
    "express": "^5.1.0",
    "idb": "^8.0.3",
    "idb-keyval": "^6.2.2",
    "on-change": "^5.0.1",
    "pica": "^9.0.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.17",
    "vite": "^7.1.4"
  }
}
